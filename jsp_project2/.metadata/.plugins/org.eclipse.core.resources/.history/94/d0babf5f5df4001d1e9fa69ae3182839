package repository;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import domain.BoardVO;
import orm.Databasebuilder;

public class BoardDAOImpl implements BoardDAO {
	private static final Logger log = LoggerFactory.getLogger(MemberDAOImpl.class);
	private SqlSession sql;
	//NameSpace = SQL 이 mapper 를 구분하기 위한 이름
	//NameSpace.SQL구문이름
	private String NS="BoardMapper.";
	
	public BoardDAOImpl() {
		new Databasebuilder();
		sql = Databasebuilder.getFactory().openSession();
	}
	
	@Override
	public int insert(BoardVO bvo) {
		log.info(">>> insert dao 집입~!!");
		int isOk = sql.insert(NS+"insert",bvo);
		if(isOk>0) {
			sql.commit();
		}
		return isOk;
	}

	@Override
	public List<BoardVO> list() {
		log.info(">>> list dao 집입~!!");
		return sql.selectList(NS+"list");
	}

	@Override
	public BoardVO detail(int bno) {
		log.info(">>> detail dao 집입~!!");
		return sql.selectOne(NS+"detail",bno);
	}

	@Override
	public BoardVO modify(int bno) {
		log.info(">>> modify dao 집입~!!");
		return sql.selectOne(NS+"modify",bno);
	}
}
